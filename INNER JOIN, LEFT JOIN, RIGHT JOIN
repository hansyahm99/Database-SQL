CREATE TABLE rate_daily (ID_ INT PRIMARY KEY, 
                         Collector VARCHAR(55),  
                         Pending_Amount_Recovery float,
                         Talk_time INTEGER);
INSERT into rate_daily(ID_,
                      Collector,
                      Pending_Amount_Recovery,
                      Talk_time)
