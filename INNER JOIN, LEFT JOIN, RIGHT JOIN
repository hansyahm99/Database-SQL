---INNER JOINT

CREATE TABLE raw_daily (ID_ INT PRIMARY KEY, 
                         Collector VARCHAR(55), 
                         Team VARCHAR(30), 
                         Cycle_ VARCHAR(5),
                         Repayment_collections INTEGER,
                         Repayment_amount INTEGER,
                         Pending_Amount INTEGER);
INSERT into raw_daily (ID_, 
       					Collector, 
       					Team, 
       					Cycle_,
       					Repayment_collections,
